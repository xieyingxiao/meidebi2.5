<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_login_out"
        style="@style/Text_fifteensp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dip"
        android:paddingBottom="8dip"
        android:paddingLeft="60dip"
        android:paddingRight="60dip"
        android:paddingTop="8dip"
        android:text="@string/menu_login_out"
        android:textColor="@color/white"
        android:visibility="gone"
        app:buttonColor="#fd7a0e"
        app:cornerRadius="22dip"
        app:shadowEnabled="false" />


    <TextView
        style="@style/Text_fourteensp"
        android:layout_gravity="center_horizontal"
        android:text="@string/about_copyright_info" />

    <TextView
        style="@style/Text_fourteensp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="68dip"
        android:layout_marginTop="10dip"

        android:text="@string/qq_group"
        android:textColor="@color/text_gery_color" />

</LinearLayout>
