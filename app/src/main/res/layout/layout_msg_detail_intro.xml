<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical" >

<View
    android:layout_width="fill_parent"
    android:layout_height="@dimen/divider_height"
    android:background="@drawable/list_divider"
    />
    <TextView
        android:id="@+id/tv_detail_site"
        style="@style/Text_elvensp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="3.25dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginTop="7.25dp"
        android:text="sitename"
        android:textColor="@color/text_gery_color"
        android:visibility="visible" />



    <TextView
        android:id="@id/tv_msg_detail_title"
        style="@style/Text_sixteensp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
         android:textColor="@color/text_black_color"
         android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.25dp"
        android:layout_marginRight="@dimen/layout_padding"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_msg_detail_pro_price"
            style="@style/Text_fourteensp"
            android:layout_width="wrap_content"
            android:paddingBottom="2.75dp"
            android:text="11"
            android:textColor="@color/price_bg"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
             android:id="@+id/tv_msg_detail_field1"
            style="@style/Text_elvensp"
            android:layout_marginLeft="@dimen/layout_padding"
             android:text="tv_msg_detail_field1"
            android:textColor="@color/text_gery_color"
            android:visibility="gone" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginBottom="2.75dp"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tv_msg_detail_field2"
            style="@style/Text_msgDetailtext" />

        <TextView
            android:id="@id/tv_msg_detail_field3"
            style="@style/Text_msgDetailtext" />

        <TextView
            android:id="@id/tv_msg_detail_field4"
            style="@style/Text_msgDetailtext" />

        <TextView
            android:id="@id/tv_msg_detail_field5"
            style="@style/Text_msgDetailtext" />

        <TextView
            android:id="@+id/tv_msg_detail_field6"
            style="@style/Text_msgDetailtext" />

        <TextView
            android:id="@+id/tv_msg_detail_field7"
            style="@style/Text_msgDetailtext" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@drawable/list_divider"
        android:layout_marginBottom="@dimen/layout_padding"

        />



</LinearLayout>