<?xml version="1.0" encoding="utf-8"?>
<com.meidebi.app.ui.view.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_sel"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_adapter_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_adapter_cat"
            style="@style/Text_twelvesp"
            android:layout_below="@id/iv_adapter_cat"
            android:layout_marginTop="@dimen/layout_padding_small"
            android:text="家用电器"
            android:textColor="@color/text_dark_gery_color" />
    </LinearLayout>

    <View
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/list_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider" />
</com.meidebi.app.ui.view.SquareView>