<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_adapter_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"

    app:cardCornerRadius="3dp"
    >

        <RelativeLayout
            android:background="@drawable/list_item_sel"
            android:padding="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/iv_adapter_coupon_list"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="70dip" />



            <RelativeLayout
                android:layout_toRightOf="@id/iv_adapter_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/tv_coupon_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="6"
                    android:textColor="@color/text_black_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginLeft="4dip"
                    android:layout_alignBottom="@id/tv_coupon_value"
                    android:layout_marginBottom="4dip"
                    android:layout_toRightOf="@id/tv_coupon_value"
                      style="@style/Text_elvensp"
                    android:gravity="bottom"
                    android:text="元券"
                    android:textColor="@color/text_dark_gery_color"

                     />

            <TextView
                android:layout_below="@id/tv_coupon_value"
                android:layout_alignLeft="@id/tv_coupon_value"
                android:id="@+id/tv_coupon_des"
                style="@style/Text_elvensp"
                android:layout_marginTop="6dip"
                android:text="text"
                android:textColor="@color/text_dark_gery_color"
             />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

