<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dip" >

 

 

        <TextView
            style="@style/Text_eightteensp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
             android:layout_marginTop="20dip"
            android:drawableLeft="@drawable/iv_dialog_commit_succeed"
            android:text="提交成功"

            android:drawablePadding="@dimen/layout_padding_small"
            android:textColor="#fd6006" />

        <TextView
            style="@style/Text_Thirteensp"
            android:layout_marginTop="20dip"
            android:text="@string/post_succeed2"
            android:textColor="@color/text_gery_color" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_marginTop="20dip"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/Text_Thirteensp"
                android:text="@string/post_succeed3"
                android:textColor="@color/text_gery_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_score"
                    style="@style/Text_Thirteensp"
                    android:text="@string/score" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/Text_Thirteensp"
                    android:layout_marginLeft="20dip"
                    android:text="@string/money" />
            </LinearLayout>

            <TextView
                style="@style/Text_Thirteensp"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="20dip"
                android:text="@string/post_succeed4"
                android:textColor="@color/text_gery_color" />
        </LinearLayout>
 
